{
    "name": "clutz88/phprompt",
    "description": "A terminal emulator made in PHP",
    "version": "0.0.1",
    "require": {
        "php": "^8.3",
        "laravel/prompts": "^0.1.24",
        "joetannenbaum/chewie": "^0.1.2"
    },
    "autoload": {
        "psr-4": {
            "Phprompt\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "./tests"
        }
    },
    "authors": [
        {
            "name": "Chris Cutts",
            "email": "chris@chriscutts.uk"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.60",
        "phpstan/phpstan": "^1.11",
        "pestphp/pest": "^2.34",
        "symfony/var-dumper": "^7.1",
        "tightenco/duster": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest"
        ],
        "run-dev": [
            "docker-compose up --build"
        ]
    }
}
